<?xml version="1.0" encoding="Big5" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.TodoRepository">
    <select id="selectTodo" resultType="com.example.demo.TodoData">
        select * from todo
    </select>
    <insert id="insertTodo" parameterType="com.example.demo.TodoData">
        insert into todo (id, title, description, createdAt) values (#{id}, #{title}, #{description}, #{createdAt})
    </insert>
    <delete id="deleteTodo" parameterType="String">
        delete from todo where id = #{id}
    </delete>
    <select id="getTodoById" parameterType="String" resultType="com.example.demo.TodoData">
        select * from todo where id = #{id}
    </select>
    <update id="updateTodo" parameterType="com.example.demo.TodoData">
        update todo set title = #{title}, description = #{description}, updatedAt = #{updatedAt} where id = #{id}
    </update>
    <update id="finishTodo" parameterType="com.example.demo.TodoData">
        update todo set finishedAt = #{finishedAt} where id = #{id}
    </update>
    <select id="getTodosByKeyword" parameterType="String" resultType="com.example.demo.TodoData">
        select * from todo where title LIKE concat('%', #{keyword}, '%') OR description LIKE concat('%', #{keyword}, '%')
    </select>
    <delete id="deleteAllTodos">
        delete from todo
    </delete>

</mapper>
